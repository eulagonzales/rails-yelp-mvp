<h1>Restaurants#index</h1>
<p>Find me in app/views/restaurants/index.html.erb</p>
<hr>
<div class="justify-space-between mt-3 ml-5">
<h1>Restaurants</h1>

<table class="text-center">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.name %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.phone_number %></td>
          <td><%= restaurant.category %></td>
          
          <td><%= link_to 'Show', restaurant %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p class="mt-3"><%= link_to 'Add a new restaurant', new_restaurant_path(@restaurant) %></p>
</div>
